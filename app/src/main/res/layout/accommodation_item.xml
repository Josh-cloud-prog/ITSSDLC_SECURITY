<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@drawable/card_background">

    <ImageView
        android:id="@+id/accommodationImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/accommodation_baler"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/accommodationName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textColor="#404040"
        android:text="Accommodation Name"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/accommodationImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/accommodationRating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rating: 4.5"
        android:paddingLeft="10dp"
        android:textColor="#404040"
        app:layout_constraintStart_toStartOf="@id/accommodationName"
        app:layout_constraintTop_toBottomOf="@id/accommodationName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/accommodationLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textColor="#404040"
        android:text="Location, Philippines"
        app:layout_constraintStart_toStartOf="@id/accommodationName"
        app:layout_constraintTop_toBottomOf="@id/accommodationRating"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
